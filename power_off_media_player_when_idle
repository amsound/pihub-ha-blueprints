blueprint:
  name: Power off Media Player when Idle
  description: Turns off a media player if it remains idle for a given number of minutes.
  domain: automation
  input:
    speaker_media_player:
      name: Speaker Media Player
      description: The media player to monitor and turn off.
      selector:
        entity:
          domain: media_player
    idle_timeout_minutes:
      name: Idle Timeout (Minutes)
      description: Number of minutes to wait while idle before turning off.
      selector:
        number:
          min: 1
          max: 120
          unit_of_measurement: minutes
          mode: slider

trigger:
  - platform: state
    entity_id: !input speaker_media_player
    to: "idle"
    for:
      minutes: !input idle_timeout_minutes

condition: []

action:
  - alias: Turn off media player
    action: media_player.turn_off
    target:
      entity_id: !input speaker_media_player

mode: single
